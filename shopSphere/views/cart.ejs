<%- include('./layout/header') %>
<%- include('./partials/navbar') %>

<div class="container">
  <h2 class="heading__h2 text-left">Shopping Cart</h2>

  <div id="cartItems">
    <!-- Cart items will be displayed here -->
  </div>

  <div class="cart-actions">
    <button class="btn red" onclick="clearCart()">Clear Cart</button>
    <div class="total">Total: $<span id="cartTotal">0</span></div>
  </div>

  <div class="checkout-action">
    <button class="btn green" onclick="checkout()" id="checkoutBtn" disabled>
      Proceed to Checkout
    </button>
  </div>
</div>

